Tickets:

<table>
    <thead>
        <th>
            <tr>
                <td>Title</td>
                <td>Creator</td>
                <td>Status</td>
                <td>Update</td>
            </tr>
        </th>
    </thead>
    <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.getTitle() }}</td>
                <td>{{ ticket.getCreator().getUsername() }}</td>
                {#<td>{{ ticket.getStatus().getStatusName() }}</td>#}
                <td>
                    <a href="{{ path('update_ticket', { ticket: ticket.getId() }) }}">
                        Update
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('create_ticket') }}">Create</a>
